pipeline {
    agent any

    stages {
        stage('Build Image') {
            steps {
                script {
                    // Construire l'image Docker personnalisée
                    sh 'docker build -t mysql-custom-image ./database'
                }
            }
        }
        stage('Start Database') {
            steps {
                script {
                    // Démarrer le conteneur MySQL
                    sh 'docker run -d --name mysql-container -p 3306:3306 mysql-custom-image'
                    // Attendre que la base de données soit prête
                    sh 'sleep 30'
                }
            }
        }
        stage('Test Database') {
            steps {
                script {
                    // Exécuter le script de test
                    sh 'docker exec mysql-container python /tests/test_database.py'
                }
            }
        }
        stage('Cleanup') {
            steps {
                script {
                    // Arrêter et supprimer le conteneur
                    sh 'docker stop mysql-container || true'
                    sh 'docker rm mysql-container || true'
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline terminé. Vérifiez les logs pour les détails.'
        }
    }
}
