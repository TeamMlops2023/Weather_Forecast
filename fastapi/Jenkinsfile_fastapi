pipeline {
    agent any

    environment {
        // Utilisation des identifiants stockés dans Jenkins
        DOCKER_CREDENTIALS = credentials('dockerhub_credentials')

    }

    stages {
        stage('Build and Push') {
            steps {
                script {
                    // Construit l'image Docker à partir du répertoire 'fastapi'
                    sh 'docker build -t mlopsweather2023/fastapi-image:latest ./fastapi'
                    echo 'Construction de l\'image Docker réussie.'

                    // Connexion à Docker Hub en utilisant les identifiants
                    sh 'echo $DOCKER_CREDENTIALS_PSW | docker login --username $DOCKER_CREDENTIALS_USR --password-stdin'
                    echo 'Connexion à Docker Hub réussie.'

                    // Pousse l'image vers Docker Hub
                    sh 'docker push mlopsweather2023/fastapi-image:latest'
                    echo 'Image Docker poussée vers Docker Hub.'
                }
            }
        }
        stage('Run') {
            steps {
                script {
                    // Démarre le conteneur Docker sur le port 8000
                    sh 'docker run -d --name fastapi-container -p 8000:8000 mlopsweather2023/fastapi-image:latest'
                    // Récupérer l'adresse IP du conteneur
                    CONTAINER_IP = sh(script: "docker inspect -f '{{range .NetworkSettings.Networks}}{{.IPAddress}}{{end}}' fastapi-container", returnStdout: true).trim()
                    echo "L'adresse IP du conteneur FastAPI est ${CONTAINER_IP}"
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    // Attendre que le serveur FastAPI démarre
                    sh 'sleep 10'
                    // Exécuter le script de test en passant l'adresse IP du conteneur comme variable d'environnement
                    sh "docker exec -e BASE_URL=http://${CONTAINER_IP}:8000 fastapi-container python /app/tests/test_fastapi.py"
                }
            }
        }
        stage('Cleanup') {
            steps {
                script {
                    // Arrêter et supprimer le conteneur FastAPI
                    sh 'docker stop fastapi-container || true'
                    sh 'docker rm fastapi-container || true'
                    echo 'Arrêt et nettoyage du conteneur réussi.'
                }
            }
        }
        stage('Deploy to Kubernetes') {
            steps {
                script {
                    // Utilisez la variable KUBECONFIG pour définir le kubeconfig dans cette étape
                    sh "kubectl --kubeconfig=${KUBECONFIG} apply -f kubernetes/fastapi/fastapi-deployment.yaml"
                    echo 'Déploiement sur Kubernetes réussi.'
                }
            }
        }
    }

    post {
        always {
            // Affiche un message à la fin de l'exécution du pipeline
            echo 'Pipeline terminé. Vérifiez les logs pour les détails.'
        }
    }
}
