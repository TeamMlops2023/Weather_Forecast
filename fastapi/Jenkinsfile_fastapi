pipeline {
    agent any
    environment {
        KUBECONFIG = '/var/jenkins_home/.kube/config'
    }
    stages {
        // Préparation de l'environnement: nettoyage du répertoire de travail
        stage('Prepare Environment') {
            steps {
                sh 'rm -rf Weather_Forecast'
            }
        }
        // Clonage du dépôt Git pour récupérer les fichiers de configuration Kubernetes
        stage('Clone Repository') {
            steps {
                sh 'git clone -b BAS_ALAIN --single-branch https://github.com/TeamMlops2023/Weather_Forecast.git'
            }
        }
        // Construction de l'image Docker pour l'application FastAPI
        stage('Build Docker Image') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub_credentials', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh 'docker build -t mlopsweather2023/fastapi-image:latest ./fastapi'
                }
            }
        }
        // Exécution d'un conteneur Docker basé sur l'image construite pour les tests
        stage('Run Docker Container') {
            steps {
                sh 'docker run -d --name fastapi-container -p 8000:8000 mlopsweather2023/fastapi-image:latest'
            }
        }
        // Exécution des tests de l'application FastAPI dans le conteneur
        stage('Run Tests') {
            steps {
                sh 'sleep 10' // Attendre que le serveur FastAPI démarre
                sh "docker exec fastapi-container python /app/tests/test_fastapi.py"
            }
        }
        // Envoi de l'image Docker vers Docker Hub
        stage('Docker Push') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub_credentials', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh 'echo $DOCKER_PASS | docker login --username $DOCKER_USER --password-stdin'
                    sh 'docker push mlopsweather2023/fastapi-image:latest'
                }
            }
        }
        // Nettoyage: arrêt et suppression du conteneur de test FastAPI
        stage('Cleanup Test Container') {
            steps {
                sh 'docker stop fastapi-container || true'
                sh 'docker rm fastapi-container || true'
            }
        }
        // Déploiement de l'application sur l'environnement de test Kubernetes
        stage('Deploy to Test Environment') {
            steps {
                // Copie des fichiers de configuration dans le cluster Kubernetes
                sh 'docker cp ./Weather_Forecast/kubernetes/fastapi/fastapi-deployment.yaml kind-control-plane:/fastapi-deployment.yaml'
                sh 'docker cp ./Weather_Forecast/kubernetes/fastapi/fastapi-service.yaml kind-control-plane:/fastapi-service.yaml'
                sh 'docker cp ./Weather_Forecast/kubernetes/ingress.yaml kind-control-plane:/ingress.yaml'
                // Application des fichiers de configuration pour déployer sur l'environnement de test
                sh "docker exec kind-control-plane kubectl apply -f /fastapi-deployment.yaml --namespace=test"
                sh "docker exec kind-control-plane kubectl apply -f /fastapi-service.yaml --namespace=test"
                sh "docker exec kind-control-plane kubectl apply -f /ingress.yaml --namespace=test"
                echo 'Déploiement dans l\'environnement de test réussi.'
            }
        }
        // Déploiement de l'application sur l'environnement de développement Kubernetes
        stage('Deploy to Dev Environment') {
            steps {
                // Réutilisation des mêmes fichiers de configuration pour le déploiement sur l'environnement de développement
                sh "docker exec kind-control-plane kubectl apply -f /fastapi-deployment.yaml --namespace=dev"
                sh "docker exec kind-control-plane kubectl apply -f /fastapi-service.yaml --namespace=dev"
                sh "docker exec kind-control-plane kubectl apply -f /ingress.yaml --namespace=dev"
                echo 'Déploiement dans l\'environnement de développement réussi.'
            }
        }
        // Déploiement de l'application sur l'environnement de production Kubernetes
        stage('Deploy to Prod Environment') {
            steps {
                
                // Confirmation manuelle nécessaire avant de déployer en production
                input(id: 'Confirm', message: 'Êtes-vous sûr de vouloir déployer en production ?', ok: 'Déployer')
                // Application des fichiers de configuration pour déployer sur l'environnement de production
                sh "docker exec kind-control-plane kubectl apply -f /fastapi-deployment.yaml --namespace=prod"
                sh "docker exec kind-control-plane kubectl apply -f /fastapi-service.yaml --namespace=prod"
                sh "docker exec kind-control-plane kubectl apply -f /ingress.yaml --namespace=prod"
                echo 'Déploiement dans l\'environnement de production réussi.'
            }
        }
    }
    post {
        always {
            echo 'Pipeline terminé. Vérifiez les logs pour les détails.'
        }
        failure {
            echo "La construction a échoué."
        }
    }
}
