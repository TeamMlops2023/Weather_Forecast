pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    // Construire l'image Docker de FastAPI
                    sh 'docker build -t fastapi-image ./fastapi'
                }
            }
        }
        stage('Run') {
            steps {
                script {
                    // Lancer le conteneur Docker FastAPI
                    sh 'docker run -d --name fastapi-container -p 8000:8000 fastapi-image'
                }
            }
        }
        stage('Cleanup') {
            steps {
                script {
                    // Arrêter et supprimer le conteneur Docker après l'avoir lancé
                    sh 'docker stop fastapi-container'
                    sh 'docker rm fastapi-container'
                }
            }
        }
    }

    post {
        always {
            // Nettoyer même en cas d'échec
            script {
                sh 'docker stop fastapi-container || true'
                sh 'docker rm fastapi-container || true'
            }
        }
    }
}
