pipeline {
    agent any

    stages {
        stage('Prepare Environment') {
            steps {
                sh 'rm -rf Weather_Forecast' // Nettoyage de l'environnement en supprimant le dossier existant
            }
        }
        stage('Clone Repository') {
            steps {
                sh 'git clone -b BAS_ALAIN --single-branch https://github.com/TeamMlops2023/Weather_Forecast.git' // Clonage du dépôt Git
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t mlopsweather2023/fastapi-image:latest ./Weather_Forecast' // Construction de l'image Docker
            }
        }
        stage('Run Docker Container') {
            steps {
                sh 'docker run -d --name fastapi-container -p 8000:8000 mlopsweather2023/fastapi-image:latest' // Exécution d'un conteneur Docker
            }
        }
        // Les phases de test et de nettoyage ont été retirées
    }

    post {
        always {
            echo 'Pipeline terminé. Vérifiez les logs pour les détails.' // Message de fin de pipeline
        }
        failure {
            echo "La construction a échoué." // Message en cas d'échec de la construction
        }
    }
}
