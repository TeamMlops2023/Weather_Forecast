pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build and Test') {
            steps {
                script {
                    def dockerImage = docker.image('mlops/fastapi:1.0')
                    dockerImage.run('-p 8000:8000 -d')
                    try {
                        sh 'docker exec -it mlops_fastapi_1 pip install -r requirements.txt'
                        sh 'docker exec -it mlops_fastapi_1 pytest tests/'
                    } finally {
                        dockerImage.stop()
                        dockerImage.remove()
                    }
                }
            }
        }
    }
}
