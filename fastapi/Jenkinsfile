pipeline {
    environment { 
        DOCKER_ID = "mkops_weather"
        DOCKER_IMAGE = "teammlopsapi"
        DOCKER_TAG = "v.${BUILD_ID}.0"
    }
    agent any 
    stages {
        stage('Docker Build') {
            steps {
                script {
                    sh '''
                    docker build -t $DOCKER_ID/$DOCKER_IMAGE:$DOCKER_TAG .
                    '''
                }
            }
        }
        stage('Docker Run') {
            steps {
                script {
                    sh '''
                    docker run -d -p 8000:8000 --name fastapi-test $DOCKER_ID/$DOCKER_IMAGE:$DOCKER_TAG
                    sleep 10
                    '''
                }
            }
        }
        stage('Test Acceptance') {
            steps {
                script {
                    sh '''
                    response=$(curl -s -o /dev/null -w "%{http_code}" localhost:8000)
                    if [ "$response" = "200" ]; then
                        echo "Tout fonctionne parfaitement"
                    else
                        echo "Le test a échoué avec le code de réponse: $response"
                        exit 1
                    fi
                    '''
                }
            }
        }
    }
    post {
        failure {
            mail to: "projet.mlops.weather@gmail.com",
                 subject: "${env.JOB_NAME} - Build # ${env.BUILD_ID} has failed",
                 body: "Check out the console output at ${env.BUILD_URL} for more info on the pipeline failure."
        }
    }
}
