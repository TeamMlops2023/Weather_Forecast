pipeline {
    agent any

    environment {
        DOCKER_ID = "mlops_2023"
        DOCKER_IMAGE = "weather_forecast-fastapi"
        DOCKER_TAG = "${BUILD_ID}.0"
    }

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    // Étape de construction de l'image Docker
                    sh "docker build -t ${DOCKER_ID}/${DOCKER_IMAGE}:${DOCKER_TAG} ."
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    // Étape d'exécution du conteneur Docker
                    sh "docker run -d -p 8000:8000 --name mon-container ${DOCKER_ID}/${DOCKER_IMAGE}:${DOCKER_TAG}"
                }
            }
        }

        stage('Test FastAPI') {
            steps {
                script {
                    // Étape de test FastAPI (personnalisez ici pour vos tests)
                    sh "curl http://localhost"
                }
            }
        }
    }
}
