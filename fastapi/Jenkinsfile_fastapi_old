pipeline {
    agent any
    environment {
        KUBECONFIG = '/var/jenkins_home/.kube/config' // Chemin d'accès au fichier de configuration Kubernetes
    }
    stages {
        stage('Prepare Environment') {
            steps {
                sh 'rm -rf Weather_Forecast' // Nettoyage de l'environnement en supprimant le dossier existant
            }
        }
        stage('Clone Repository') {
            steps {
                sh 'git clone -b BAS_ALAIN --single-branch https://github.com/TeamMlops2023/Weather_Forecast.git' // Clonage du dépôt Git
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'dockerhub_credentials', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                        sh 'docker build -t mlopsweather2023/fastapi-image:latest ./fastapi' // Construction de l'image Docker
                        echo 'Construction de l\'image Docker réussie.'
                    }
                }
            }
        }
        stage('Run Docker Container') {
            steps {
                script {
                    sh 'docker run -d --name fastapi-container -p 8000:8000 mlopsweather2023/fastapi-image:latest' // Exécution d'un conteneur Docker pour les tests
                    CONTAINER_IP = sh(script: "docker inspect -f '{{range .NetworkSettings.Networks}}{{.IPAddress}}{{end}}' fastapi-container", returnStdout: true).trim()
                    echo "L'adresse IP du conteneur FastAPI est ${CONTAINER_IP}"
                }
            }
        }
        stage('Run Tests') {
            steps {
                script {
                    sh 'sleep 10' // Pause pour permettre au serveur FastAPI de démarrer
                    sh "docker exec fastapi-container python /app/tests/test_fastapi.py" // Exécution des tests
                }
            }
        }
        stage('Docker Push') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'dockerhub_credentials', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                        sh 'echo $DOCKER_PASS | docker login --username $DOCKER_USER --password-stdin' // Connexion à Docker Hub
                        sh 'docker push mlopsweather2023/fastapi-image:latest' // Envoi de l'image sur Docker Hub
                        echo 'Image Docker poussée vers Docker Hub.'
                    }
                }
            }
        }
        stage('Cleanup Test Container') {
            steps {
                script {
                    sh 'docker stop fastapi-container || true' // Arrêt du conteneur de test
                    sh 'docker rm fastapi-container || true' // Suppression du conteneur de test
                    echo 'Arrêt et nettoyage du conteneur de test réussi.'
                }
            }
        }
        stage('Deploy to Test Environment') {
            steps {
                script {
                    sh "docker exec kind-control-plane kubectl get ns test || docker exec kind-control-plane kubectl create ns test" // Vérification/création du namespace test
                    sh 'docker cp ./Weather_Forecast/kubernetes/fastapi/fastapi-deployment.yaml kind-control-plane:/fastapi-deployment.yaml' // Copie du fichier de déploiement dans le cluster
                    sh 'docker cp ./Weather_Forecast/kubernetes/fastapi/ingress-test.yaml kind-control-plane:/ingress-test.yaml' // Copie du fichier ingress pour l'environnement de test
                    sh "docker exec kind-control-plane kubectl apply -f /fastapi-deployment.yaml --namespace=test" // Déploiement dans le namespace test
                    sh "docker exec kind-control-plane kubectl apply -f /ingress-test.yaml --namespace=test" // Application de la configuration ingress dans le namespace test
                    echo 'Déploiement dans l\'environnement de test réussi.'
                }
            }
        }
        stage('Deploy to Dev Environment') {
            steps {
                script {
                    sh "docker exec kind-control-plane kubectl get ns dev || docker exec kind-control-plane kubectl create ns dev" // Vérification/création du namespace dev
                    sh 'docker cp ./Weather_Forecast/kubernetes/fastapi/fastapi-deployment.yaml kind-control-plane:/fastapi-deployment.yaml' // Copie du fichier de déploiement dans le cluster
                    sh 'docker cp ./Weather_Forecast/kubernetes/fastapi/ingress-dev.yaml kind-control-plane:/ingress-dev.yaml' // Copie du fichier ingress pour l'environnement de développement
                    sh "docker exec kind-control-plane kubectl apply -f /fastapi-deployment.yaml --namespace=dev" // Déploiement dans le namespace dev
                    sh "docker exec kind-control-plane kubectl apply -f /ingress-dev.yaml --namespace=dev" // Application de la configuration ingress dans le namespace dev
                    echo 'Déploiement dans l\'environnement de développement réussi.'
                }
            }
        }
        stage('Deploy to Prod Environment') {
            steps {
                script {
                    sh "docker exec kind-control-plane kubectl get ns prod || docker exec kind-control-plane kubectl create ns prod" // Vérification/création du namespace prod
                    sh 'docker cp ./Weather_Forecast/kubernetes/fastapi/fastapi-deployment.yaml kind-control-plane:/fastapi-deployment.yaml' // Copie du fichier de déploiement dans le cluster
                    sh 'docker cp ./Weather_Forecast/kubernetes/fastapi/ingress-prod.yaml kind-control-plane:/ingress-prod.yaml' // Copie du fichier ingress pour l'environnement de production
                    timeout(time: 15, unit: 'MINUTES') {
                        input message: 'Voulez-vous déployer en production ?', ok: 'Déployer'
                    }
                    sh "docker exec kind-control-plane kubectl apply -f /fastapi-deployment.yaml --namespace=prod" // Déploiement dans le namespace prod
                    sh "docker exec kind-control-plane kubectl apply -f /ingress-prod.yaml --namespace=prod" // Application de la configuration ingress dans le namespace prod
                    echo 'Déploiement dans l\'environnement de production réussi.'
                }
            }
        }
    }
    post {
        always {
            echo 'Pipeline terminé. Vérifiez les logs pour les détails.' // Message de fin de pipeline
        }
        failure {
            echo "La construction a échoué." // Message en cas d'échec de la construction
        }
    }
}
