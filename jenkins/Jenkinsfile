pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'BAS_ALAIN', url: 'https://github.com/TeamMlops2023/Weather_Forecast.git'
            }
        }

        stage('Tests') {
            steps {
                script {
                    // Lance les services nécessaires pour les tests
                    sh 'docker-compose -f code/docker-compose.yml up -d'
                    // Insérez ici vos commandes de test
                    // ...
                }
            }
            post {
                // Nettoie les services après les tests
                always {
                    script {
                        sh 'docker-compose -f code/docker-compose.yml down'
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Démarre les services pour les laisser actifs
                    sh 'docker-compose -f code/docker-compose.yml up -d'
                }
            }
            // Pas de post-action pour assurer que les services restent en ligne
        }
    }
}
