pipeline {
    agent any // Utilisez n'importe quel agent disponible

    stages {
        stage('Build') {
            steps {
                script {
                    // Construisez l'image Docker du modèle de machine learning
                    sh 'docker build -t modele-image .'
                    echo 'Construction de l\'image Docker réussie.'
                }
            }
        }
        stage('Run Model and Populate Database') {
            steps {
                script {
                    // Démarrez le conteneur Docker pour exécuter le modèle et remplir la base de données
                    sh 'docker run -it --rm --link mysql-container:mysql modele-image'
                    echo 'Exécution du modèle et remplissage de la base de données terminés.'
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline terminé. Vérifiez les logs pour les détails.'
        }
    }
}
